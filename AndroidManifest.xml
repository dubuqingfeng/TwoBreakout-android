<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digdream.androidbreakout"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.digdream.androidbreakout.ui.AppActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="com.lenovo.anyshare.action.START_GAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.digdream.androidbreakout.Breakout"
            android:label="@string/title_activity_breakout"
            android:theme="@style/withBackgroundTitleLevel1"  
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.digdream.androidbreakout.Breakout2p"
            android:label="@string/title_activity_breakout"
            android:theme="@style/withBackgroundTitleLevel1"  
            android:screenOrientation="portrait" >
        </activity>
           <activity
            android:name="com.digdream.androidbreakout.ui.MainActivity"
            android:label="@string/title_activity_breakout"
            android:screenOrientation="portrait" >
        </activity>
           <activity
            android:name="com.digdream.androidbreakout.ui.LevelChooseActivity"
            android:label="@string/title_activity_breakout"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.digdream.androidbreakout.ui.TestActivity"
            android:label="@string/title_activity_breakout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.digdream.androidbreakout.Splash"
            android:label="@string/title_activity_breakout"
            android:screenOrientation="portrait" >
            
        </activity>
        <activity
            android:name="com.digdream.androidbreakout.ui.AboutActivity"
            android:label="@string/title_activity_breakout"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait" >
            
        </activity>
        <activity
            android:name="com.digdream.androidbreakout.ui.OptionActivity"
            android:label="@string/title_activity_breakout"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait" >
            
        </activity>

        <meta-data
            android:name="SHAREIT_SUPPORTED_PLAYER_NUM"
            android:value="1,2" >
        </meta-data>
    </application>

</manifest>